<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.lekcie.vinslocal.Fragments.CouleurFragment">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">



    <TextView
        android:id="@+id/txtCouleur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Choisir la robe de votre vin"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnCouleurRouge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
      android:background="@drawable/round_boutons_couleurrouge"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/btnCouleurBlanc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_boutons_couleurblanc"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btnCouleurRosee"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_boutons_couleurrose"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"/>







</LinearLayout>

</FrameLayout>