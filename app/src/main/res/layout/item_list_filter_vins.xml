<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lltItemDomaine"

    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frlClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <ImageButton
            android:id="@+id/imgDetailClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/ic_close_black_24dp" />
    </FrameLayout>
            <TextView
                android:id="@+id/txtFiltItemVin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Nom du vin"

                android:layout_marginLeft="17dp"
                android:textColor="@android:color/black"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/txtFiltItemPrix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/txtDomaineDistance"
                android:layout_alignParentRight="true"
                android:layout_marginTop="33dp"
                android:layout_marginRight="40dp"
                android:text="prix"
                android:textColor="#9E0E40"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtDomaineDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="6dp"
                android:layout_below="@id/txtFiltItemVin"
                android:text=" nom du domaine Ã  7,2km"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="italic" />

            <View
                android:id="@+id/toolbarMaps"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="6dp"
                android:layout_below="@id/txtFiltItemVin"
                android:layout_marginLeft="17dp"
                android:background="@drawable/repere"/>




            <View
                android:id="@+id/separator"
                android:layout_width="180dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_below="@id/txtDomaineDistance"
                android:background="#808080" />

        </RelativeLayout>


    </LinearLayout>








